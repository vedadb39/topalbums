<resources>
    <!-- Base application theme. -->
    <style name="Theme.TopAlbums" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:titleTextStyle">@color/black</item>
        <item name="collapsingAppBarStyle">@style/Widget.Design.AppBarLayout</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TopAlbums.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TopAlbums.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TopAlbums.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.CollapsingToolbarTitle.Expanded" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/sf_pro_text_semibold</item>
        <item name="android:textSize">@dimen/text_size_expanded_collapsing_app_bar</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="AppTheme.CollapsingToolbarTitle.Collapsed" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/sf_pro_text_semibold</item>
        <item name="android:textSize">@dimen/text_size_collapsed_collapsing_app_bar</item>
        <item name="android:textColor">@color/dark</item>
    </style>

</resources>
